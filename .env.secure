# =====================================================
# Segurança
# =====================================================
# Rate Limiting
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_TIME_WINDOW=300
# 300 segundos = 5 minutos

# CORS (se necessário para API)
CORS_ALLOWED_ORIGINS=https://seudominio.com.br,https://app.seudominio.com.br

# =====================================================
# Uploads
# =====================================================
UPLOAD_MAX_SIZE_IMAGE=5242880
# 5MB em bytes
UPLOAD_MAX_SIZE_DOCUMENT=10485760
# 10MB em bytes
UPLOAD_MAX_SIZE_VIDEO=52428800
# 50MB em bytes

# =====================================================
# Cache (se usar Redis/Memcached)
# =====================================================
CACHE_DRIVER=file
# file, redis, memcached
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# =====================================================
# Backup
# =====================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
# daily, weekly, monthly
BACKUP_RETENTION_DAYS=30
